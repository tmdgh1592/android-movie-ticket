<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.ticketingresult.TicketingResultActivity">

    <View
        android:id="@+id/ticketing_header_container"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/ticketing_header_color" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginBottom="12dp"
        android:lineHeight="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintBottom_toBottomOf="@id/ticketing_header_container"
        android:text="@string/ticketing_cancel_info"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/ticketing_header_container"
        app:layout_constraintEnd_toEndOf="@id/ticketing_header_container" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ticketing_header_container"
        tools:text="해리 포터와 마법사의 돌" />

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        tools:text="2024.3.1" />

    <TextView
        android:id="@+id/regular_count_tv"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/pay_result_tv"
        app:layout_constraintTop_toBottomOf="@id/date_tv"
        tools:text="일반 1명" />

    <TextView
        android:id="@+id/pay_result_tv"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/regular_count_tv"
        tools:text="13,000원 (현장 결제)"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
