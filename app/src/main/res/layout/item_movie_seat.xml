        android:gravity="center"
        android:padding="26dp"
        android:textAlignment="gravity"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="A1"
        tools:textColor="@color/b_class_color" />

</androidx.constraintlayout.widget.ConstraintLayout>
